{
  "name": "httpx-monorepo",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Vanvelthem SÃ©bastien",
    "url": "https://github.com/belgattitude"
  },
  "homepage": "https://github.com/belgattitude/httpx",
  "repository": "belgattitude/httpx",
  "resolutions?": {
    "vite": "https://github.com/vitest-dev/vitest/issues/4112"
  },
  "resolutions": {
    "vite": "^4.5.0"
  },
  "scripts": {
    "g:clean": "yarn clean:global-cache && yarn workspaces foreach --all -pv run clean",
    "g:build": "yarn workspaces foreach --all -tv run build",
    "g:build-release": "yarn workspaces foreach -tv --worktree --from 'packages/*' run build-release",
    "g:build-packages": "yarn workspaces foreach -tv --worktree --from 'packages/*' run build",
    "g:build-examples": "yarn workspaces foreach -tv --worktree --from 'examples/*' run build",
    "g:docgen": "yarn workspaces foreach --all -ptv run docgen",
    "g:test": "yarn workspaces foreach --all -pv run test",
    "g:test-unit": "yarn workspaces foreach --all -pv run test-unit",
    "g:lint": "yarn workspaces foreach --all -v run lint",
    "g:typecheck": "yarn workspaces foreach --all -v run typecheck",
    "g:lint-staged-files": "lint-staged --allow-empty",
    "g:fix-all-files": "yarn workspaces foreach --all -ptv run fix-all-files",
    "g:changeset": "changeset",
    "g:check-dist": "yarn workspaces foreach --all -ptv run check-dist",
    "g:check-size": "yarn workspaces foreach --all -ptv run check-size",
    "g:check-pub": "yarn workspaces foreach --all -ptv run check-pub",
    "g:check-package-dist": "yarn workspaces foreach --worktree -ptv --from 'packages/*' run check-dist",
    "g:release": "yarn g:build-release && yarn g:check-package-dist && yarn exec changeset publish",
    "g:ci-coverage-upload": "yarn workspaces foreach --all -tv run ci-coverage-upload",
    "clean:lint": "rimraf ./.cache/eslint",
    "clean:global-cache": "rimraf ./.cache",
    "deps:check": "npx npm-check-updates@latest --configFileName ncurc.yml --deep",
    "deps:update": "npx npm-check-updates@latest --configFileName ncurc.yml -u --deep",
    "docs:serve": "docsify serve ./docs",
    "check:install": "yarn dlx @yarnpkg/doctor@3.1 .",
    "postinstall": "is-ci || yarn husky install",
    "syncpack:format": "syncpack format",
    "syncpack:check": "syncpack lint-semver-ranges --types prod,dev --source \"package.json\" --source \"packages/*/package.json\"",
    "syncpack:list": "syncpack list-semver-ranges --types prod,dev --source \"package.json\" --source \"packages/*/package.json\"",
    "nuke:node_modules": "rimraf --glob '**/node_modules'",
    "prettier:format": "prettier --config .prettierrc.js --cache --cache-location=\".cache/prettier/monorepo.prettiercache\" --ignore-path .prettierignore \"**/*.{js,cjs,mjs,ts,mts,md,mdx,json}\" --write"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ],
  "packageManager": "yarn@4.0.1",
  "devDependencies": {
    "@belgattitude/eslint-config-bases": "3.2.0",
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.2",
    "@commitlint/cli": "18.2.0",
    "@commitlint/config-conventional": "18.1.0",
    "@types/prettier": "2.7.3",
    "@types/shell-quote": "1.7.4",
    "cross-env": "7.0.3",
    "docsify": "4.13.1",
    "docsify-cli": "4.4.4",
    "eslint": "8.53.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "15.0.2",
    "npm-run-all": "4.1.5",
    "prettier": "3.0.3",
    "rimraf": "5.0.5",
    "shell-quote": "1.8.1",
    "syncpack": "11.2.1",
    "typescript": "5.2.2"
  },
  "engines": {
    "node": ">=18.14"
  }
}
